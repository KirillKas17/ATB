[mypy-infrastructure.agents.whales.*]
ignore_errors = True

# Временно менее строго для файлов с внешними зависимостями
[mypy-infrastructure.*.torch_models]
ignore_errors = True

[mypy-infrastructure.*.whales.*]
ignore_errors = True 