# ============================================================================
# ATB Trading System - Environment Variables
# ============================================================================
# Скопируйте этот файл в .env и заполните реальными значениями
# НИКОГДА не коммитьте .env файл в репозиторий!

# ============================================================================
# БАЗОВЫЕ НАСТРОЙКИ
# ============================================================================
APP_NAME=ATB Trading System
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# ============================================================================
# БЕЗОПАСНОСТЬ
# ============================================================================
# API ключи для бирж (загружаются из переменных окружения)
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here
API_PASSPHRASE=your_passphrase_here

# Ключи шифрования (генерируйте уникальные для каждого окружения)
ENCRYPTION_KEY=your_32_character_encryption_key_here
JWT_SECRET=your_jwt_secret_key_here

# ============================================================================
# БАЗА ДАННЫХ
# ============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=atb_trading
DB_USER=postgres
DB_PASSWORD=your_secure_database_password_here

# ============================================================================
# КЭШ (REDIS)
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# ============================================================================
# БИРЖИ
# ============================================================================
# Bybit
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_API_SECRET=your_bybit_api_secret_here
BYBIT_TESTNET=true

# Binance
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
BINANCE_TESTNET=true

# ============================================================================
# МОНИТОРИНГ И ЛОГИРОВАНИЕ
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/trading_bot.log
METRICS_INTERVAL=60
HEALTH_CHECK_INTERVAL=30

# ============================================================================
# ТОРГОВЫЕ ПАРАМЕТРЫ
# ============================================================================
TRADING_INTERVAL=300
SENTIMENT_ANALYSIS_INTERVAL=600
PORTFOLIO_REBALANCE_INTERVAL=3600
EVOLUTION_CYCLE_INTERVAL=1800
SIMULATION_CYCLE_INTERVAL=3600

MAX_POSITIONS=10
RISK_THRESHOLD=0.1
MAX_LEVERAGE=3.0
MAX_POSITION_SIZE=0.1
MAX_CONCENTRATION=0.25

# ============================================================================
# РИСК-МЕНЕДЖМЕНТ
# ============================================================================
MAX_VAR=0.02
MAX_DRAWDOWN=0.15
RISK_CACHE_TTL=300

# ============================================================================
# МАШИННОЕ ОБУЧЕНИЕ
# ============================================================================
MODELS_PATH=models/
TRAINING_DATA_PATH=data/training/
VALIDATION_SPLIT=0.2
BATCH_SIZE=32
LEARNING_RATE=0.001
MAX_EPOCHS=100

# ============================================================================
# ЭВОЛЮЦИОННЫЕ АЛГОРИТМЫ
# ============================================================================
EVOLUTION_ENABLED=true
POPULATION_SIZE=100
GENERATIONS=50
MUTATION_RATE=0.1
CROSSOVER_RATE=0.8
ELITE_SIZE=10
TOURNAMENT_SIZE=3
FITNESS_THRESHOLD=0.95

# ============================================================================
# ВНЕШНИЕ СЕРВИСЫ
# ============================================================================
# Telegram Bot (опционально)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Slack (опционально)
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# Email (опционально)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password_here

# ============================================================================
# РАЗРАБОТКА И ТЕСТИРОВАНИЕ
# ============================================================================
# Только для разработки!
TEST_MODE=true
MOCK_TRADING=true
BACKTEST_MODE=false

# ============================================================================
# ПРОИЗВОДИТЕЛЬНОСТЬ
# ============================================================================
WORKER_PROCESSES=4
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30
CONNECTION_POOL_SIZE=20

# ============================================================================
# ПРИМЕЧАНИЯ ПО БЕЗОПАСНОСТИ
# ============================================================================
# 1. Используйте сильные пароли (минимум 12 символов)
# 2. Регулярно ротируйте API ключи
# 3. Ограничивайте права API ключей только необходимыми операциями
# 4. Используйте разные ключи для разных окружений
# 5. Никогда не коммитьте .env файл в репозиторий
# 6. Используйте менеджер секретов в продакшене (AWS Secrets Manager, HashiCorp Vault)
# 7. Включайте двухфакторную аутентификацию везде, где возможно
# 8. Регулярно обновляйте зависимости
# 9. Мониторьте логи на предмет подозрительной активности
# 10. Используйте HTTPS для всех внешних соединений 